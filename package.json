{
  "name": "docker-wechatbot-webhook",
  "version": "2.3.0",
  "description": "给微信里加个 webhook 机器人，支持docker部署",
  "main": "index.js",
  "scripts": {
    "postinstall": "patch-package",
    "prestart": "node ./scripts/preStart",
    "dev": "export WECHATY_PUPPET=wechaty-puppet-xp &&nodemon main",
    "start": "export WECHATY_PUPPET=wechaty-puppet-xp&&node main"
  },
  "engines": {
    "node": ">=18"
  },
  "author": {
    "name": "danni-cool",
    "email": "contact@danni.cool"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/danni-cool/docker-wechatbot-webhook.git"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "file-box": "1.4.15",
    "file-type": "^18.5.0",
    "form-data": "^4.0.0",
    "mime": "^3.0.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch-commonjs": "^3.3.2",
    "wechaty": "^1.20.2",
    "wechaty-puppet-xp": "^1.13.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^18.1.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "nodemon": "^3.0.1",
    "patch-package": "^8.0.0",
    "prettier": "^3.0.3"
  }
}
